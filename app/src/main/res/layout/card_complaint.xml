<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/complaint_card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_margin="0dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="4dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/comp_card_image"
                android:src="@drawable/ic_navigation_cancel"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />
            <TextView
                android:layout_width="wrap_content"
                android:maxLines="2"
                android:text="Title of the Problem"
                android:id="@+id/comp_card_title"
                android:layout_toRightOf="@id/comp_card_image"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/comp_card_updown"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="42/42"
                android:layout_toRightOf="@id/comp_card_image"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="Date"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/comp_card_date"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Creator"
                android:layout_alignParentRight="true"
                android:layout_above="@id/comp_card_date"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textStyle="italic"

                android:id="@+id/comp_card_creator"/>
            
            
            
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>